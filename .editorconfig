# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,mf,txt,nb,yml,yaml,pdftex}]
trim_trailing_whitespace = false

[{compile-summary,*.{yml,yaml,sh,py,pml,md,dot,nb,pdftex,json}}]
indent_style = space

[*.{yml,yaml,md}]
indent_size = 2

[{Makefile,*.c}]
indent_style = tab

[{COPYING,LICENSE,NOTICE,*.{mf,xmp,txt,py,nb,pml,pdftex}}]
indent_size = unset
